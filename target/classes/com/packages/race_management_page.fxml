<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.packages.racingMenu">
    <VBox fx:id="headerBox" alignment="TOP_CENTER">
        <children>
            <Label text="------------------------------------------------&#10;Race Management (Simple View)&#10;------------------------------------------------" style="-fx-font-size: 25px;"/>
        </children>
    </VBox>
    <VBox fx:id="contentBox" alignment="CENTER_LEFT">
        <children>
            <Label text="Car Detail" style="-fx-font-size: 18px;"/>
            <Button fx:id="raceManagementButton" text="Switch to Primary View" onAction="#returnToMain" />
        </children>
        <padding>
            <Insets left="60.0" right="60.0" />
        </padding>
    </VBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>